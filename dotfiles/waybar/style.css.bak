/* ===============================
   GLOBAL STYLE – Battery Friendly
   Opaque, 22px font for 720p
   =============================== */
* {
  border: none;
  border-radius: 0;
  font-family: "JetBrains Mono", "Symbols Nerd Font Mono", "Font Awesome 6 Free", "Font Awesome 6 Brands", monospace;
  font-size: 20px;
  min-height: 0;
}

window#waybar {
  background: #1e1e1e;  /* opaque, no alpha */
  color: #e0e0e0;
  padding: 4px 8px;
  border-bottom: 1px solid #252525;
}

/* Sections spacing */
.modules-left,
.modules-center,
.modules-right {
  margin: 0 2px;
}

/* ===============================
   WORKSPACES
   =============================== */
#workspaces {
  background: #252525;
  padding: 2px 8px;
  border-radius: 8px;
}

#workspaces button {
  padding: 0 10px;
  margin: 0 2px;
  background: transparent;
  color: #b0b0b0;
  border-radius: 6px;
}

#workspaces button:hover {
  background: #363636;
  color: #ffffff;
}

#workspaces button.active {
  background: #4a4a4a;
  color: #ffffff;
  font-weight: bold;
}

/* ===============================
   MODULES – Opaque blocks
   =============================== */
#battery,
#cpu,
#memory,
#network,
#pulseaudio,
#clock,
#tray,
#custom-power {
  padding: 2px 10px;
  margin: 0 4px;
  background: #2a2a2a;
  border-radius: 8px;
}

/* Make center clock a bit more prominent */
#clock {
  font-weight: bold;
  background: #343434;
}

/* Battery states */
#battery.charging {
  background: #355534;
  color: #c8f9c3;
}

#battery.warning {
  background: #554a30;
  color: #ffe0a0;
}

#battery.critical {
  background: #553030;
  color: #ffb0b0;
}

/* Audio */
#pulseaudio.muted {
  background: #242424;
  color: #888888;
}

/* Tray icons spacing */
#tray > * {
  margin: 0 4px;
}

/* ===============================
   POWER BUTTON (logout / reboot / shutdown)
   =============================== */
#custom-power {
  background: #7a1e1e;
  color: #ffecec;
  font-weight: bold;
}

#custom-power:hover {
  background: #9b1c1c;
  color: #ffffff;
}

/* ===============================
   HOVER – simple, no alpha
   =============================== */
#cpu:hover,
#memory:hover,
#network:hover,
#pulseaudio:hover,
#battery:hover {
  background: #3c3c3c;
}
